<h1>Listing JBCC Customer Support</h1>

<table class="table table-hover table-condensed"">  
  <thead>
    <tr>
      <th>NÂº</th>
      <th>Name</th>
      <th>Kanji</th>
      <th>Sex</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Introductor</th>
      <th>Company</th>
      <th>Account Name</th>
      <th>Account Number</th>
      <th>Create date</th>
      <th>Support</th>
      <th>Service</th>
      <th>Address</th>
      <th>Remark</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>   
    <% @jbccs.each_with_index do |jbcc, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to jbcc.name, jbcc, class: "btn-link" %></td>
        <td><%= jbcc.kanji %></td>
        <td><%= jbcc.sex %></td>
        <td><%= jbcc.tel %></td>
        <td><%= jbcc.email %></td>
        <td><%= jbcc.introductor %></td>
        <td><%= jbcc.company %></td>
        <td><%= jbcc.account_name %></td>
        <td><%= jbcc.account_number %></td>
        <td><%= jbcc.create_date %></td>
        <td><%= jbcc.support %></td>
        <td><%= jbcc.service %></td>
        <td><%= jbcc.address %></td>
        <td><%= jbcc.remark %></td>
        <td><%= link_to edit_jbcc_path(jbcc), class: "btn-link" do %>
          <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        </td><td><%= link_to jbcc, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-link" do %>
          <span class="glyphicon glyphicon-trash"></span>
          <% end %>
           
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

